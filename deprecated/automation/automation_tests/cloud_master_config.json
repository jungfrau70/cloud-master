{
  "course_name": "Cloud Master",
  "duration_days": 3,
  "prerequisites": ["cloud_basic"],
  "learning_objectives": [
    "Docker 컨테이너 기술 이해",
    "Git/GitHub 버전 관리 시스템",
    "CI/CD 파이프라인 구축",
    "VM 기반 배포 전략",
    "모니터링 및 로깅 시스템"
  ],
  "practical_exercises": [
    "Docker 기본 실습",
    "Git/GitHub 워크플로우",
    "GitHub Actions CI/CD",
    "VM 배포 자동화",
    "모니터링 설정"
  ],
  "environment_setup": {
    "docker_registry": "docker.io",
    "github_org": "cloud-training",
    "vm_instance_type": "e2-medium",
    "monitoring_enabled": true
  },
  "shared_resources": {
    "docker_resources": [
      "Images",
      "Containers",
      "Registry"
    ],
    "github_resources": [
      "Repositories",
      "Workflows",
      "Secrets"
    ],
    "vm_resources": [
      "Instances",
      "Disks",
      "Networks"
    ]
  },
  "previous_course": "cloud_basic",
  "next_course": "cloud_container"
}
