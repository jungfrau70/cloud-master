# GCP 공유 리소스 환경 변수
# Cloud Basic → Cloud Master → Cloud Container 과정 간 공유

# GCP 기본 설정
GCP_PROJECT_ID=cloud-training-project
GCP_REGION=us-central1
GCP_ZONE=us-central1-a
GCP_CREDENTIALS_PATH=~/.config/gcloud/credentials.json

# VPC 네트워크
GCP_VPC_NAME=cloud-training-vpc
GCP_VPC_CIDR=10.1.0.0/16
GCP_SUBNET_NAME=cloud-training-subnet
GCP_SUBNET_CIDR=10.1.0.0/24

# 방화벽 규칙
GCP_FIREWALL_WEB=cloud-training-web-firewall
GCP_FIREWALL_SSH=cloud-training-ssh-firewall
GCP_FIREWALL_K8S=cloud-training-k8s-firewall

# Cloud Storage
GCP_BUCKET_NAME=cloud-training-storage
GCP_BUCKET_LOCATION=us-central1

# IAM 서비스 계정
GCP_SERVICE_ACCOUNT_COMPUTE=cloud-training-compute@cloud-training-project.iam.gserviceaccount.com
GCP_SERVICE_ACCOUNT_K8S=cloud-training-k8s@cloud-training-project.iam.gserviceaccount.com
GCP_SERVICE_ACCOUNT_STORAGE=cloud-training-storage@cloud-training-project.iam.gserviceaccount.com

# Cloud SQL
GCP_SQL_INSTANCE_NAME=cloud-training-db
GCP_SQL_DATABASE_VERSION=POSTGRES_13
GCP_SQL_TIER=db-f1-micro

# GKE 클러스터
GKE_CLUSTER_NAME=cloud-training-gke
GKE_NODE_POOL_NAME=cloud-training-pool
GKE_NODE_MACHINE_TYPE=e2-medium
GKE_NODE_COUNT=3

# Cloud Functions
GCP_FUNCTION_NAME=cloud-training-processor
GCP_FUNCTION_RUNTIME=python39
GCP_FUNCTION_REGION=us-central1

# Cloud Logging
GCP_LOG_NAME=cloud-training-logs
GCP_LOG_FILTER=resource.type="gce_instance"

# Cloud Monitoring
GCP_MONITORING_WORKSPACE=cloud-training-monitoring
