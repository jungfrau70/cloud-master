# AWS 공유 리소스 환경 변수
# Cloud Basic → Cloud Master → Cloud Container 과정 간 공유

# AWS 기본 설정
AWS_REGION=us-west-2
AWS_PROFILE=cloud-training
AWS_ACCOUNT_ID=123456789012

# VPC 설정
VPC_ID=vpc-12345678
VPC_CIDR=10.0.0.0/16
PUBLIC_SUBNET_1=subnet-12345678
PUBLIC_SUBNET_2=subnet-87654321
PRIVATE_SUBNET_1=subnet-11111111
PRIVATE_SUBNET_2=subnet-22222222

# 보안 그룹
SECURITY_GROUP_WEB=sg-12345678
SECURITY_GROUP_DB=sg-87654321
SECURITY_GROUP_K8S=sg-11111111

# S3 버킷
S3_BUCKET_NAME=cloud-training-artifacts
S3_BUCKET_REGION=us-west-2

# IAM 역할
IAM_ROLE_EC2=CloudTrainingEC2Role
IAM_ROLE_LAMBDA=CloudTrainingLambdaRole
IAM_ROLE_EKS=CloudTrainingEKSRole

# RDS 설정
RDS_INSTANCE_ID=cloud-training-db
RDS_ENGINE=postgres
RDS_INSTANCE_CLASS=db.t3.micro

# EKS 클러스터
EKS_CLUSTER_NAME=cloud-training-cluster
EKS_NODE_GROUP_NAME=cloud-training-nodes
EKS_NODE_INSTANCE_TYPE=t3.medium

# Lambda 함수
LAMBDA_FUNCTION_NAME=cloud-training-processor
LAMBDA_RUNTIME=python3.9

# CloudWatch 로그 그룹
CLOUDWATCH_LOG_GROUP=/aws/cloud-training
