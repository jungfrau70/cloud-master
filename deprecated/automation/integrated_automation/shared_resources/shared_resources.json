      },
      "network": {
        "description": "VPC Network",
        "required_for": ["cloud_basic", "cloud_master"],
        "shared_across_courses": true
      },
      "subnet": {
        "description": "Subnet for network isolation",
        "required_for": ["cloud_basic", "cloud_master"],
