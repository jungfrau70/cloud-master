  "course_dependencies": {
    "cloud_basic": {
      "creates": ["aws_resources", "gcp_resources"],
      "requires": [],
      "shares_with": ["cloud_master"]
    },
    "cloud_master": {
      "creates": ["docker_resources", "github_resources"],
      "requires": ["aws_resources", "gcp_resources"],
      "shares_with": ["cloud_container"]
    },
    "cloud_container": {
      "creates": ["kubernetes_resources"],
      "requires": ["docker_resources", "github_resources"],
      "shares_with": []
    }
  },
  "resource_lifecycle": {
    "creation_order": [
      "aws_resources",
      "gcp_resources", 
      "docker_resources",
      "github_resources",
      "kubernetes_resources"
    ],
    "cleanup_order": [
      "kubernetes_resources",
      "github_resources",
      "docker_resources",
      "gcp_resources",
      "aws_resources"
    ]
  },
  "monitoring": {
    "enabled": true,
    "metrics": [
      "resource_creation_time",
      "resource_usage",
      "course_completion_rate",
      "error_rate"
    ],
    "alerts": [
      "resource_creation_failure",
      "course_completion_failure",
      "resource_cleanup_failure"
    ]
  }
}
